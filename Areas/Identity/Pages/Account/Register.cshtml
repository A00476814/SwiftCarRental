@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- Add your Bootstrap CSS link here -->
<link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />

<style>
    /* Center the form and give it some padding */
    .col-md-4 {
        margin: auto;
        padding: 20px;
        background-color: #343a40; /* Dark background color */
        border-radius: 10px; /* Add border-radius for a rounded appearance */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Add box shadow for depth */
    }

    
    /* Add this style to change text color in the dropdown */
    .custom-dropdown option {
        color: black ;
    }

   /*.form-control.custom-dropdown option {
        color: black !important;
    }*/



    /* Style for the form header */
    h2 {
        color: #007bff; /* Bootstrap primary color */
        text-align: center;
    }

    /* Style for form labels */
    .form-floating label {
        color: #ffffff; /* White text color */
    }

    .custom-dropdown {
        color: #ffffff; /* Text color */
        background-color: #495057; /* Background color */
    }

    /* Style for the submit button */
    #registerSubmit {
        background-color: #28a745; /* Bootstrap success color */
    }

    /* Style for the external login section */
    section {
        text-align: center;
        margin-top: 20px;
    }

    .custom-dropdown {
        color: black; /* Text color */
        background-color: #495057; /* Background color */
    }

    /* Style for the external login buttons */
    .btn-primary {
        background-color: #007bff !important; /* Bootstrap primary color */
        margin: 5px;
    }

    /* Optional: Add a border-radius to the form fields */
    .form-floating input {
        border-radius: 5px;
        background-color: #495057; /* Darker background color for form fields */
        color: #ffffff; /* Set text color to white for better visibility */
        border: 1px solid #ced4da; /* Add a border to improve visibility */
    }

        /* Style specifically for first name, last name, and license number */
        .form-floating input#Input_FirstName,
        .form-floating input#Input_LastName,
        .form-floating input#Input_DRivingLicenceNo {
            color: #ffffff; /* Set text color to white for better visibility */
        }

    /* Style for the "Use another service to register" section */
    .external-service-section {
        margin-top: 20px;
        text-align: center;
    }

    /* Style for the card containing the journey text */
    .journey-card {
        background-color: #212529; /* Dark background color */
        color: #fff; /* White text color */
        border-radius: 10px; /* Add border-radius for a rounded appearance */
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Add box shadow for depth */
    }
</style>




<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="new" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="new" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DRivingLicenceNo" class="form-control" autocomplete="new" aria-required="true" />
                <label asp-for="Input.DRivingLicenceNo"></label>
                <span asp-validation-for="Input.DRivingLicenceNo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Country" asp-items="Model.Input.CountryOptions" class="form-control custom-dropdown" aria-required="true">
                   
                </select>
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="new" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" type="date" class="form-control" autocomplete="new" aria-required="true" />
                <label asp-for="Input.DateOfBirth"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <div class="external-service-section">
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="journey-card">
                            <p class="fw-bold">
                                Embark on a Journey of Freedom and Convenience – Register with Swift Car Rental Today and Unlock the Road to Seamless Adventures!
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 col-md-offset-2">
                            <section>
                                <div class="card bg-light p-3">
                                    <p class="fw-bold">
                                        Embark on a Journey of Freedom and Convenience – Register with Swift Car Rental Today and Unlock the Road to Seamless Adventures!
                                    </p>
                                </div>
                            </section>
                        </div>
                    }
                }
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
