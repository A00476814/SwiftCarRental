@model SwiftCarRental.Models.PaymentDetails

@{
    ViewData["Title"] = "Payment Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header">
                    <h2>Payment Confirmation</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Thank You for Your Payment</h4>
                    <p class="card-text">Your payment has been successfully processed.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>